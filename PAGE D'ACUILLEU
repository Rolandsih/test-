  <script>
    // Texts in both languages (FR/EN) – everything is here for full translation
    const texts = {
      fr: {
        title: "BOT TELEGRAM",
        mainName: "ZACK CASH",
        desc: "Bienvenue.<br>Je partage des bots pour gagner au casino et d’autres astuces.<br>Découvre et contacte-moi sur Telegram !",
        canalMain: "Accéder au canal Telegram",
        canalSub: "CANAL TELEGRAM",
        contactMain: "Contacter sur Telegram",
        contactSub: "CONTACT TELEGRAM",
        infoTitle: "Informations",
        infoContent: "Le bot Aviator est conçu pour t’aider à maximiser tes chances de réussite au jeu. Profite d’analyses précises et de conseils exclusifs. Pour activer le bot ou obtenir un accompagnement personnalisé, contacte-moi directement sur Telegram.",
        botLinkText: "Accéder au Bot Aviator"
      },
      en: {
        title: "TELEGRAM BOT",
        mainName: "ZACK CASH",
        desc: "Welcome.<br>I share casino-winning bots and other tips.<br>Discover and contact me on Telegram!",
        canalMain: "Access the Telegram channel",
        canalSub: "TELEGRAM CHANNEL",
        contactMain: "Contact on Telegram",
        contactSub: "TELEGRAM CONTACT",
        infoTitle: "Information",
        infoContent: "The Aviator bot is designed to help you maximize your chances of success in the game. Benefit from accurate analyses and exclusive tips. To activate the bot or get personalized support, contact me directly on Telegram.",
        botLinkText: "Access the Aviator Bot"
      }
    };

    function setLang(lang) {
      document.getElementById('title').innerText = texts[lang].title;
      document.getElementById('main-name').innerText = texts[lang].mainName;
      document.getElementById('desc').innerHTML = texts[lang].desc;
      // For the link-main spans, update only the text node (after img node)
      let canalMainSpan = document.getElementById('canal-main');
      canalMainSpan.childNodes[1].nodeValue = " " + texts[lang].canalMain;
      let contactMainSpan = document.getElementById('contact-main');
      contactMainSpan.childNodes[1].nodeValue = " " + texts[lang].contactMain;
      document.getElementById('canal-sub').innerText = texts[lang].canalSub;
      document.getElementById('contact-sub').innerText = texts[lang].contactSub;
      document.getElementById('info-title').innerText = texts[lang].infoTitle;
      document.getElementById('info-content').innerText = texts[lang].infoContent;
      document.getElementById('bot-link-text').innerText = texts[lang].botLinkText;
      document.getElementById('fr-flag').classList.toggle('selected', lang === 'fr');
      document.getElementById('en-flag').classList.toggle('selected', lang === 'en');
      document.documentElement.lang = lang;
    }

    document.getElementById('fr-flag').onclick = () => setLang('fr');
    document.getElementById('en-flag').onclick = () => setLang('en');
  </script>
